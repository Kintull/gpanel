<div class="container">
  <div class="row justify-content-md-center mt-3 pt-5">
    <div class="col col-lg-4"></div>
    <div class="col">
        <h3>Get brand new server!</h3>
        <%= form_for @changeset, @callback_url, [as: :user], fn f -> %>
            <div class="form-group row">
              <div class="col-sm-12">
                <%= email_input f, :email, class: "register-form-control", placeholder: "Email" %>
                <%= error_tag f, :email %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-12">
                <%= password_input f, :password, class: "register-form-control", id: "inputPassword", placeholder: "Password" %>
                <%= error_tag f, :password %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-12">
                <%= password_input f, :password_confirmation, class: "register-form-control", id: "inputPasswordConfirmation", placeholder: "Confirm Password" %>
                <%= error_tag f, :password_confirmation %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4">
                <input type="hidden" value="<%= Plug.CSRFProtection.get_csrf_token() %>" name="_csrf_token"/>
                <%= submit "Register", class: "btn btn-warning" %>
              </div>
            </div>

        <% end %>
    </div>
    <div class="col col-lg-4"></div>
  </div>
</div>

